---
import { Image } from "astro:assets";
const { exhibitions } = Astro.props;
---

{
  exhibitions.map((data) => (
    <li class="exhibitions-box">
      <div class="flex items-center gap-8">
        <div class="image-wrapper">
          <Image
            src={data.image}
            alt={data.title}
            class="absolute inset-0 w-full h-full object-cover"
            width="400"
            height="400"
          />
        </div>
        <div class="space-y-4">
          <div class="space-y-2">
            <h6>{data.place}</h6>
            <h4>{data.title}</h4>
          </div>
          <p>{data.descption}</p>
        </div>
      </div>
      <div class="flex items-center gap-24">
        <a href="/exhibitions/independent-beatuy  ">
          Buy Ticket{" "}
          <svg
            width="22"
            height="22"
            viewBox="0 0 22 22"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M5.52051 16.48L16.1271 5.87338" stroke="#DB574D" />
            <path d="M6.58105 5.5199H16.4805V15.4194" stroke="#DB574D" />
          </svg>
        </a>
        <div class="date">
          <p>{data.data.month}</p>
          <h5>{data.data.date}</h5>
        </div>
      </div>
    </li>
  ))
}

<style>
  .exhibitions-box {
    @apply flex w-full items-center justify-between gap-12 py-12;
  }

  .exhibitions-box .image-wrapper {
    @apply min-w-56 min-h-56 relative max-w-56 max-h-56;
  }

  .exhibitions-box:nth-child(1) {
    @apply pt-0;
  }

  .exhibitions-box h4 {
    @apply text-default text-heading-2 leading-none;
  }

  .exhibitions-box .date {
    @apply text-end;
  }

  .exhibitions-box .date h5 {
    @apply text-primary text-heading-l leading-none;
  }

  .exhibitions-box .date p {
    @apply text-primary text-heading-3;
  }

  .exhibitions-box h6 {
    @apply text-default text-text-m;
  }

  .exhibitions-box p {
    @apply text-default text-text-m max-w-2xl;
  }

  .exhibitions-box a {
    @apply text-primary text-text-m flex items-center gap-2;
  }
</style>
